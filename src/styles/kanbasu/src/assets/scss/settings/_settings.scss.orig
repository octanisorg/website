/*----------------------------------------*\
  GLOBAL SETTINGS
\*----------------------------------------*/

$ratio:                   1.61803398875 !default;

/**
 * Colors
 */

$brand-color:             #6ea644 !default;


/**
 * Typography
 */

$font-family-default:     'Helvetica Neue', Helvetica, Arial, sans-serif !default;

$font-size-default:       16px !default;
$font-size-small:         0.75rem !default;
$font-size-large:         1.5rem !default;

$line-height-default:     1.45 !default;

$text-color:              #333 !default;
$link-color:              $brand-color !default;


/**
 * Spacings
 */

$spacing-unit-default:    24px !default;
$spacing-unit-tiny:       $spacing-unit-default / ($ratio*2) !default;
$spacing-unit-small:      $spacing-unit-default / $ratio !default;
$spacing-unit-large:      $spacing-unit-default * $ratio !default;
$spacing-unit-huge:       $spacing-unit-default * ($ratio*2) !default;


/**
 * Responsiveness
 */

$screen-xs-max:           640px !default;
$screen-sm-min:           $screen-xs-max + 1px !default;
$screen-sm-max:           768px !default;
$screen-md-min:           $screen-sm-max + 1px !default;
$screen-md-max:           1024px !default;
$screen-lg-min:           $screen-md-max + 1px !default;

$mq-xs:                   '(max-width: #{$screen-xs-max})' !default;
$mq-sm:                   '(min-width: #{$screen-sm-min}) and (max-width: #{$screen-sm-max})' !default;
$mq-md:                   '(min-width: #{$screen-md-min}) and (max-width: #{$screen-md-max})' !default;
$mq-lg:                   '(min-width: #{$screen-lg-min})' !default;

$breakpoints-default:     (
                            'xs' $mq-xs,
                            'sm' $mq-sm,
                            'md' $mq-md,
                            'lg' $mq-lg
                          ) !default;


/**
 * Miscellaneous
 */

$border-radius-default:   4px !default;
$border-radius-small:     2px !default;
$border-radius-large:     6px !default;


/*----------------------------------------*\
  COMPONENT SPECIFIC
\*----------------------------------------*/

/**
 * Buttons
 */

$btn-default-bkg-color:   #eee !default;
$btn-primary-bkg-color:   $brand-color !default;


/**
 * Forms
 */

$border-default-color:    #999 !default;
$border-color-focus:      #333 !default;
$field-help-color:        #999 !default;


/**
 * Lists
 */

$list-separator-style:    1px solid #eee !default;


/**
 * Box
 */

$box-default-bkg-color:   #eee !default;
$box-primary-bkg-color:   $brand-color !default;
$box-primary-text-color:  white !default;


